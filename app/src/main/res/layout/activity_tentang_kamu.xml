<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TentangKamu"
    android:background="@color/cyan">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ci_close_tentang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_white_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        app:civ_border_color="#FFF"
        app:civ_border_width="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/gb_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/nay01"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        app:civ_border_color="#FFF"
        app:civ_border_width="1dp"/>
    <LinearLayout
        android:id="@+id/view_last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_below="@id/gb_profile"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20sp"
                fontPath="fonts/ComingSoon.ttf"
                tools:ignore="MissingPrefix"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text=": Nailis Sa'adatil Ulya"
                fontPath="fonts/ComingSoon.ttf"
                tools:ignore="MissingPrefix"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of Birth"
                android:textSize="20sp"
                fontPath="fonts/ComingSoon.ttf"
                tools:ignore="MissingPrefix"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text=": 16 Agustus 1992"
                fontPath="fonts/ComingSoon.ttf"
                tools:ignore="MissingPrefix"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Work"
            android:textSize="20sp"
            fontPath="fonts/ComingSoon.ttf"
            tools:ignore="MissingPrefix"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text=": Library at IAIN KUDUS"
            fontPath="fonts/ComingSoon.ttf"
            tools:ignore="MissingPrefix"/>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favorite"
            android:textSize="20sp"
            fontPath="fonts/ComingSoon.ttf"
            tools:ignore="MissingPrefix"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text=": Ice Cream, Chocolate, Noodles, Saad :D"
            fontPath="fonts/ComingSoon.ttf"
            tools:ignore="MissingPrefix"/>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_ig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_below="@id/view_last">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ig"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/id_ig"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center"
            android:textSize="17sp"
            android:fontFamily="sans-serif"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_fb"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_below="@id/id_ig">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fb"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nailis Sa'adatil Ulya"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center"
            android:textSize="17sp"
            android:fontFamily="sans-serif"/>
    </LinearLayout>
</RelativeLayout>